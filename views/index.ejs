<!DOCTYPE html>
<html>
<head>
    <title>Club Campestre Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 20px; background-color: #f8f9fa; }
        #logs { max-height: 400px; overflow-y: auto; background: #fff; padding: 15px; border-radius: 8px; }
        .navbar { margin-bottom: 20px; }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Club Campestre Bot</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuLogs">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="menuLogs">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <span class="nav-link">Logs en tiempo real</span>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
    <form method="POST" class="mb-4">
        <div class="row g-2">
            <div class="col-md-3"><input type="text" name="user" class="form-control" placeholder="Usuario" required></div>
            <div class="col-md-3"><input type="password" name="password" class="form-control" placeholder="ContraseÃ±a" required></div>
            <div class="col-md-3"><input type="text" name="telefono" class="form-control" placeholder="WhatsApp Destino" required></div>
            <div class="col-md-3">
                <button type="submit" name="activar" class="btn btn-success">Activar Bot</button>
                <button type="submit" name="pausar" class="btn btn-warning">Pausar Bot</button>
            </div>
        </div>
    </form>

    <div id="logs">
        <% logs.forEach(function(log){ %>
            <p><%= log %></p>
        <% }); %>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const logsDiv = document.getElementById('logs');

    socket.on('log', msg => {
        const p = document.createElement('p');
        p.textContent = msg;
        logsDiv.appendChild(p);
        logsDiv.scrollTop = logsDiv.scrollHeight;
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
