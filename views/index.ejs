<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Club Campestre Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        body { padding: 20px; background: #f5f5f5; }
        .logs { height: 300px; overflow-y: scroll; background: #000; color: #0f0; padding: 10px; border-radius: 5px; }
        .botones { margin-bottom: 20px; }
    </style>
</head>
<body>
<div class="container">
    <h1 class="mb-4">Bot de Reservas Club Campestre</h1>

    <form method="POST" class="botones">
        <div class="mb-2">
            <input type="text" name="user" class="form-control" placeholder="Usuario" required>
        </div>
        <div class="mb-2">
            <input type="password" name="password" class="form-control" placeholder="ContraseÃ±a" required>
        </div>
        <div class="mb-2">
            <input type="text" name="telefono" class="form-control" placeholder="WhatsApp Destino" required>
        </div>
        <button type="submit" name="activar" class="btn btn-success">Activar Bot</button>
        <button type="submit" name="pausar" class="btn btn-danger">Pausar Bot</button>
    </form>

    <h3>Logs en tiempo real:</h3>
    <div class="logs" id="logs"></div>
</div>

<script>
    const socket = io();
    const logsDiv = document.getElementById('logs');

    socket.on('new-log', msg => {
        const p = document.createElement('p');
        p.textContent = msg;
        logsDiv.appendChild(p);
        logsDiv.scrollTop = logsDiv.scrollHeight;
    });
</script>
</body>
</html>
