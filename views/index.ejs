<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Club Campestre Bot</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { font-family: Arial, sans-serif; margin: 0; background: #f0f2f5; }
        header { background: #007bff; color: white; padding: 15px; display: flex; justify-content: space-between; align-items: center; }
        header h1 { margin: 0; font-size: 1.2rem; }
        .hamburger { font-size: 1.5rem; cursor: pointer; display: none; }
        nav { background: #0056b3; display: flex; gap: 10px; padding: 10px; }
        nav a { color: white; text-decoration: none; }
        @media(max-width: 600px){ 
            nav { display: none; flex-direction: column; }
            nav.active { display: flex; }
            .hamburger { display: block; }
        }

        main { padding: 20px; }
        form { display: flex; flex-wrap: wrap; gap: 10px; margin-bottom: 20px; }
        input { padding: 8px; width: 200px; }
        button { padding: 8px 12px; cursor: pointer; }
        #logs { background: #fff; padding: 10px; border-radius: 5px; height: 300px; overflow-y: auto; border: 1px solid #ccc; font-family: monospace; }
        #logs p { margin: 0 0 5px 0; }
    </style>
</head>
<body>
    <header>
        <h1>Club Campestre Bot</h1>
        <div class="hamburger" onclick="document.querySelector('nav').classList.toggle('active')">
            <i class="fas fa-bars"></i>
        </div>
    </header>
    <nav>
        <a href="#">Inicio</a>
        <a href="#">Logs</a>
        <a href="#">Ayuda</a>
    </nav>

    <main>
        <form method="POST">
            <input type="text" name="user" placeholder="Usuario" required>
            <input type="password" name="password" placeholder="ContraseÃ±a" required>
            <input type="text" name="telefono" placeholder="WhatsApp Destino" required>
            <button type="submit" name="activar">Activar Bot</button>
            <button type="submit" name="pausar">Pausar Bot</button>
        </form>

        <h2>Logs</h2>
        <div id="logs"></div>
    </main>

    <script>
        const socket = io();
        const logsDiv = document.getElementById('logs');

        socket.on('log', msg => {
            const p = document.createElement('p');
            p.textContent = msg;
            logsDiv.appendChild(p);
            logsDiv.scrollTop = logsDiv.scrollHeight;
        });
    </script>
</body>
</html>
