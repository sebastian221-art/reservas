<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Campestre Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            max-width: 700px;
            margin-top: 50px;
        }
        .logs {
            background-color: #1e1e1e;
            color: #f1f1f1;
            height: 300px;
            overflow-y: auto;
            padding: 15px;
            border-radius: 5px;
            font-family: monospace;
        }
        .log-success { color: #28a745; }
        .log-error { color: #dc3545; }
        .log-info { color: #17a2b8; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Bot de Reservas - Club Campestre</h1>

        <form method="POST" class="mb-4">
            <div class="mb-3">
                <input type="text" name="user" class="form-control" placeholder="Usuario" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
            </div>
            <div class="mb-3">
                <input type="text" name="telefono" class="form-control" placeholder="WhatsApp Destino" required>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" name="activar" class="btn btn-success">Activar Bot</button>
                <button type="submit" name="pausar" class="btn btn-warning">Pausar Bot</button>
            </div>
        </form>

        <h4>Logs en tiempo real</h4>
        <div class="logs" id="logs">
            <% logs.forEach(function(log){ %>
                <p><%= log %></p>
            <% }); %>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const logsDiv = document.getElementById('logs');

        socket.on('new_log', (msg) => {
            const p = document.createElement('p');
            p.textContent = msg;

            // Colores según tipo de log
            if(msg.includes('✅')) p.classList.add('log-success');
            else if(msg.includes('❌')) p.classList.add('log-error');
            else p.classList.add('log-info');

            logsDiv.appendChild(p);
            logsDiv.scrollTop = logsDiv.scrollHeight;
        });
    </script>
</body>
</html>
